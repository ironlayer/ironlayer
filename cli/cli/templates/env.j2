# IronLayer environment configuration
# Generated by `platform init`
#
# This file is loaded automatically by the IronLayer CLI and API.
# Add it to .gitignore -- never commit secrets to version control.

PLATFORM_ENV=dev

# State store
PLATFORM_STATE_STORE_TYPE={{ state_store }}
{% if state_store == "postgres" -%}
PLATFORM_DATABASE_URL=postgresql+asyncpg://ironlayer:ironlayer_dev@localhost:5432/ironlayer
{% endif -%}

{% if databricks_host -%}
# Databricks
PLATFORM_DATABRICKS_HOST={{ databricks_host }}
PLATFORM_DATABRICKS_TOKEN={{ databricks_token or 'YOUR_TOKEN_HERE' }}
{% if databricks_warehouse_id -%}
PLATFORM_DATABRICKS_WAREHOUSE_ID={{ databricks_warehouse_id }}
{% endif -%}
{% endif -%}

# AI engine
{% if ai_enabled -%}
AI_ENGINE_URL=http://localhost:8001
{% else -%}
# AI_ENGINE_URL=http://localhost:8001  # Uncomment to enable AI advisory
{% endif -%}

# Local execution (DuckDB path for dev mode)
PLATFORM_LOCAL_DB_PATH=.ironlayer/local.duckdb
